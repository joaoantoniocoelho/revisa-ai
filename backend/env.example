NODE_ENV=<env>
PORT=3001

MONGODB_URI=<your_db_uri>

JWT_SECRET=<your_super_secret_jwt_key>
JWT_EXPIRE=<time_to_expire>

GEMINI_MODEL=<gemini_model>
GEMINI_API_KEY=<your_gemini_api_key_here>

FRONTEND_URL=<your_frontend_url>
# Optional: comma-separated allowlist for CORS (recommended for prod + preview + localhost)
# FRONTEND_URLS=https://your-frontend.vercel.app,http://localhost:3000
BACKEND_URL=<your_backend_public_url>

# Optional cookie behavior override: lax | strict | none
# In production default is `none` (cross-site compatible); in development default is `lax`.
# AUTH_COOKIE_SAMESITE=none

# Email verification (Resend - optional until integrated)
# RESEND_API_KEY=
# FROM_EMAIL=onboarding@resend.dev

# Google OAuth (login social)
GOOGLE_CLIENT_ID=<your_google_oauth_client_id>

# Set true to block API usage temporarily while app is under construction.
# APP_MAINTENANCE_MODE=true

# Mercado Pago
MP_API_BASE_URL=<base_url_mercado_pago>
MP_ACCESS_TOKEN=<token_mercado_pago>
MP_WEBHOOK_SECRET=<webhook_secret_mercado_pago>
